    <body>
        <% if (sess_level==0) { %>
        <div>
            <input type="submit" class="btn btn-default" id="back" value="BACK">
        </div>
        <% } %>

        <h1>클라이언트 개인 프로필</h1>
        
        <% if (sess_level==0 || sess_id==sess_page_id) { %>
        <p>권한 테스트: 이 블럭이 나오면 본인 페이지 이거나 관리자 입니다.</p>
        <% } %>
        <table class="table table-striped" id="profile">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>ex</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>ex</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>ex</td>
                </tr>
                <tr>
                    <th>Score</th>
                    <td>ex</td>
                </tr>
            </tbody>
        </table>

        <% if (sess_level==0 || sess_id==sess_page_id) { %>
        <div>
            <form class="form-inline" id="update">
                <select id="update_attr">
                    <option value="Name">Name</option>
                    <option value="Phone">Phone</option>
                </select>
                <input type="text" class="form-control" id="update_value" placeholder="new value">
                <input type="submit" class="btn btn-default" value="UPDATE">
            </form>
        </div> 
        <% } %>

        <table class="table table-striped" id="working">
            <caption>진행중</caption>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <table class="table table-striped" id="appliable">
            <caption>구인중</caption>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <table class="table table-striped" id="completed">
            <caption>완료</caption>
            <thead>
                <tr>
                    <th>Request ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

        <!-- jQuery (부트스트랩의 자바스크립트 플러그인을 위해 필요합니다) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <!-- 합쳐지고 최소화된 최신 자바스크립트 -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script> 
    </body>

    <script>

        $(function(){
            var path_array = window.location.pathname.split('/');
            var Id = path_array[2];

            console.log(Id);

            $.ajax({
                type: 'get',
                url: '/get_client_profile/get_profile/'+Id,
                success: function(data) {
                    console.log(data);
                    $('#profile tbody').html("");
                    for(var i = 0 ; i < data.length; i ++) {
                        var will_be_append = $('<tr>'+
                                                    '<th>Id</th>'+
                                                    '<td>'+data[i].Id+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Name</th>'+
                                                    '<td>'+data[i].Name+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Phone</th>'+
                                                    '<td>'+data[i].Phone+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Score</th>'+
                                                    '<td>'+data[i].Score+'</td>'+
                                                '</tr>');
                        $('#profile tbody').append(will_be_append);
                    }
                },
                error: function(err) {
                    console.log(err);
                }
            });

            $.ajax({
                type: 'get',
                url: '/get_client_profile/get_request_list/'+Id,
                success: function(data) {
                    console.log(data);
                    $('#working tbody').html("");
                    $('#appliable tbody').html("");
                    $('#completed tbody').html("");
                    for(var i = 0 ; i < data.length; i ++) {
                        var will_be_append = $('<tr>'+
                                                    '<td><a href="/request_info/'+data[i].Id+'">'+data[i].Id+'</a></td>'+
                                                    '<td>'+data[i].Title+'</td>'+
                                                '</tr>');
                        if (data[i].State == 'WORKING') {
                            $('#working tbody').append(will_be_append);
                        }
                        else if (data[i].State == 'APPLIABLE') {
                            $('#appliable tbody').append(will_be_append);
                        }
                        else {
                            $('#completed tbody').append(will_be_append);
                        }
                    }
                },
                error: function(err) {
                    console.log(err);
                }
            });

            $('#update').submit(function(){
                var v = {
                        id: Id,
                        attr: $("#update_attr").val(),
                        value: $("#update_value").val()
                    }
                $.ajax({
                    type: 'post',
                    url: '/get_client_profile/update',
                    data: v,
                    success: function(data) {
                        window.location="/client_profile/"+Id;
                    },
                    error: function(err) {
                        console.log(err);
                    }
                });
            });

            $('#back').click(function(){
                window.location="/manager_page";
            });

        });
    </script>

</html>