        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/index">YSSB</a>
          </div>
      
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
            <!--<li class="active"><a href="#"> <span class="sr-only">(current)</span></a></li>-->
              <% if(sess_level==0) { %>
              <li><a href="/manager_page">MY PAGE</a></li>
              <% } else if (sess_level==1) { %>
              <li><a href="/client_profile/<%= sess_id %>">MY PAGE</a></li> 
              <% } else if (sess_level==2) { %>
              <li><a href="/freelancer_profile/<%= sess_id %>">MY PAGE</a></li>
              <% }%>
              <li><a href="/request_list">Request List</a></li>
              <!--<li><a href="client">CLIENT</a></li>
              <li><a href="freelancer">FREELANCER</a></li>-->
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% if(sess_id){ %>
                <li><a href="/logout">LOG OUT</a></li>
              <% }else{ %>
                <li><a href="/login">LOG IN</a></li>
                <li><a href="/signup">SIGN UP</a></li>
              <% } %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    <body>

        <div id="basic_info">
          <h3>의뢰 정보</h3>
          <table style="width :100%;" class="table table-striped">
            <tbody>
            </tbody>
          </table>
        </div>

        <h3>수정 삭제 버튼 넣기</h3>
        <div id="worker">
              <h3>참여 중인 프리랜서</h3>
              <table style="width :100%;" class="table table-striped">
              <thead>
                  <tr>
                      <th>아이디</th>
                      <th>상태</th>
                  </tr>
              </thead>
              <tbody>
              </tbody>
          </table>
        </div>

        <div id="applier">
              <h3>신청 중인 프리랜서</h3>
              <table style="width :100%;" class="table table-striped">
              <thead>
                  <tr>
                      <th>아이디</th>
                      <th>상태</th>
                      <th>수락/거절</th>
                  </tr>
              </thead>
              <tbody>
              </tbody>
          </table>
        </div>

        <button class="button">의뢰 신청</button>
        <button class="button">의뢰 완료 요청</button>
        <input class="button" type="submit" id="view_message_button" value="의뢰 거부 메시지">

        <!-- jQuery (부트스트랩의 자바스크립트 플러그인을 위해 필요합니다) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <!-- 합쳐지고 최소화된 최신 자바스크립트 -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    </body>

    <script>

        $(function(){

          var path_array = window.location.pathname.split('/');
          var Id = path_array[2];

            $.ajax({
                type: 'get',
                url: '/get_request_info/'+Id,
                success: function(data) {
                    console.log(data);
                    $('#basic_info tbody').html("");
                    for(var i = 0 ; i < data.length; i ++) {
                        var will_be_append = $('<tr>'+
                                                    '<th>Id</th>'+
                                                    '<td>'+data[i].Id+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Title</th>'+
                                                    '<td>'+data[i].Title+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Pay</th>'+
                                                    '<td>'+data[i].Pay+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Career</th>'+
                                                    '<td>'+data[i].Min_career+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>State</th>'+
                                                    '<td>'+data[i].State+'</td>'+
                                                '</tr>'+
                                                '<tr>'+
                                                    '<th>Client</th>'+
                                                    '<td><a href="/client_profile/'+data[i].Client_id+'">'+data[i].Client_id+'</a></td>'+
                                                '</tr>'
                                              );
                        $('#basic_info tbody').append(will_be_append);
                    }
                },
                error: function(err) {
                console.log(err);
                }
            });

            $.ajax({
                type: 'get',
                url: '/get_request_info/get_worker_list/'+Id,
                success: function(data) {
                    console.log(data);
                    $('#worker tbody').html("");
                    for(var i = 0 ; i < data.length; i ++) {
                        var will_be_append = $('<tr>'+
                                                    '<td><a href="/freelancer_profile/'+data[i].Participant_id+'">'+data[i].Participant_id+'</a></td>'+
                                                    '<td>'+data[i].State+'</td>'+
                                                '</tr>');
                        $('#worker tbody').append(will_be_append);
                    }
                },
                error: function(err) {
                    console.log(err);
                }
            });
            $.ajax({
                type: 'get',
                url: '/get_request_info/get_applier_list/'+Id,
                success: function(data) {
                    console.log(data);
                    $('#applier tbody').html("");
                    for(var i = 0 ; i < data.length; i ++) {
                        var will_be_append = $('<tr>'+
                                                    '<td><a href="/freelancer_profile/'+data[i].Participant_id+'">'+data[i].Participant_id+'</a></td>'+
                                                    '<td>'+data[i].State+'</td>'+
                                                    '<td>'+data[i].State+'</td>'+
                                                '</tr>');
                        $('#applier tbody').append(will_be_append);
                    }
                },
                error: function(err) {
                    console.log(err);
                }
            });

            $('#view_message_button').click(function(){
                window.location="/view_message/"+Id;
            });


        });
    </script>

</html>
