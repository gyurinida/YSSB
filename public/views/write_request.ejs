    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div>
                <button class="btn btn-default" onclick="location.href='/request_list'">BACK</button>
                <h2>의뢰 작성 페이지</h2>
            </div>
            <form action="/file_upload/req_spec" method="POST" id=form enctype="multipart/form-data">
            <!--<form action="/write_request" method="POST" id=form enctype="multipart/form-data">-->
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control" name="write_title" placeholder="Title" required>
                </div>
    
                <div class="form-group">
                    <label>Pay($)</label>
                    <input type="number" class="form-control" name="write_pay" placeholder="단위는 $입니다." required>
                </div>
    
                <div>
                    <label>모집 마감 날짜를 알려주세요</label>
                    <input type="date" class="form-control" name="write_end" id="write_end" required>
                </div>
    
                <div class="form-group">
                    <label>필요한 최소 경력</label>
                    <input type="number" class="form-control" name="write_min_career" required>
                </div>
    
                <div class="form-group">
                    <input type="file" class="form-control" name="file">
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="WRITE">
                </div>

            </form>

            <!--<form action="/file_upload/req_spec" method="post" enctype="multipart/form-data">
                <input type="file" name="file">
                <input type="submit">
            </form>
            -->

        </div>
    </div>

<!-- jQuery (부트스트랩의 자바스크립트 플러그인을 위해 필요합니다) -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
<script type='text/javascript'>

    $('#form').submit(function(){
        var end = $('#write_end').val();
        var eyear = Number(end.slice(0, 4));
        var emonth = Number(end.slice(5, 7));
        var edate = Number(end.slice(8));

        var today =  new Date();
        var tyear = today.getFullYear();
        var tmonth = today.getMonth();
        var tdate = today.getDate();
        
        if(eyear<tyear){
            alert('모집 마감 날짜는 오늘보다 미래여야 합니다.');
            return false;
        }
        else if(eyear>tyear){
            return true;
        }
        else if(emonth<tmonth){
            alert('모집 마감 날짜는 오늘보다 미래여야 합니다.');
            return false;
        }
        else if(emonth>tmonth){
            return true;
        }
        else if(edate<=tdate){
            alert('모집 마감 날짜는 오늘보다 미래여야 합니다.');
            return false;
        }
        else{
            return true;
        }
    });
</script>

